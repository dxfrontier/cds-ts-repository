{
  "name": "@dxfrontier/cds-ts-repository",
  "version": "0.1.0",
  "description": "The goal of SAP CAP CDS-QL BaseRepository is to significantly reduce the boilerplate code required to implement data access layers for persistance entities by providing out of the box actions on the database like .create(), .getAll(), find() ...",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "./dist"
  ],
  "workspaces": [
    "./test/bookshop"
  ],
  "scripts": {
    "eslint": "npx eslint .",
    "eslint:fix": "npx eslint . --fix",

    "prettier": "npx prettier . --check",
    "prettier:fix": "npx prettier . --write",
    
    "check": "npm run eslint && npm run prettier",
    
    "fix": "npm run eslint:fix && npm run prettier:fix",
    
    "test": "npm run build:entities --prefix test/bookshop && jest",
    
    "prepare": "husky install",
    
    "build": "echo 'build cds-ts-dispatcher...' && tsup",
    
    "clean:build": "echo 'Clean dist folder' && npx rimraf ./dist/{*.js,*.map,*.ts,*.mts,*.mjs}"
  },
  "dependencies": {
    "@sap/cds": "^7.3.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@cap-js/sqlite": "^1.3.1",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-config-standard-with-typescript": "^39.1.1",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-n": "^16.2.0",
    "eslint-plugin-promise": "^6.1.1",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "lint-staged": "^15.0.1",
    "prettier": "3.0.3",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2",
    "tsup": "^7.2.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dxfrontier/cds-ts-repository.git"
  },
  "keywords": [
    "CDS-TS-Repository",
    "Controller-Service-Repository",
    "SAP CAP CDS-TS Decorators",
    "SAP CAP TypeScript Decorators"
  ],
  "author": {
    "name": "Daniel Dragolea",
    "email": "dragolea@yahoo.com"
  },
  "maintainers": [
    {
      "name": "Daniel Dragolea",
      "email": "dragolea@yahoo.com"
    },
    {
      "name": "Sebastian Blessing",
      "email": "sebastian.blessing@abs-gmbh.de"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dxfrontier/cds-ts-repository/issues"
  },
  "homepage": "https://github.com/dxfrontier/cds-ts-repository#readme",
  "lint-staged": {
    "**/*.{ts, tsx}": [
      "npx eslint . --fix",
      "npx prettier . --write",
      "npx jest --findRelatedTests --bail ./test/**",
      "npm run build"
    ]
  }
}
